<body>

    <div class="container">
        <h1 class="page-header">¿DÓNDE INVIERTO?</h1>
        <div class="row">
            
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Iniciar Sesión</h3>
                    </div>
                    <div class="panel-body">
                        <form action="/loginDB" method="post" id="logueo">
                         #if(!${ingresoValido})
                        	<div class="alert alert-danger alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                Usuario o contraseña incorrecta.
                            </div>
                         #end
                            <fieldset>
                                <div class="form-group $error">
                                    <input id="$ingresoInvalido" class="form-control" placeholder="Usuario" name="username" type="text" autofocus value="" required>
                                </div>
                                <div class="form-group $error">
                                    <input id="$ingresoInvalido" class="form-control" placeholder="Clave" name="password" type="password" value="" required>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Recordarme
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button type="submit" form="logueo" value="Submit" class="btn btn-lg btn-success btn-block">Ingresar</button>
                            </fieldset>
                        </form>
                    </div>
                    <div class="panel-body">
                    <a class="btn btn-block btn-social btn-facebook" href="/loginFacebook">
                    <i class="fa fa-facebook"></i> Ingresar con Facebook</a>
                    <a class="btn btn-block btn-social btn-twitter"  href="/loginTwitter">
                    <i class="fa fa-twitter"></i> Ingresar con Twitter</a>

                    
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="../vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="../vendor/bootstrap/js/bootstrap.min.js"></script>

